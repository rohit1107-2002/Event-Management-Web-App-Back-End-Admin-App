<%= render "header" %>

<div style="text-align:center;margin-bottom:15px;margin-top:15px;">
  <a href="/add_event" class="btn btn-primary" style="margin:0 auto" >Add Event</a>
</div>

<% @posts.each do |post| %>
  <div class="card" style="width: 40rem;margin:0 auto;margin-bottom:10px;">
  <div class="card-body">
    <h5 class="card-title"><%= post.title%></h5>
    <p class="card-text"><%= post.description%></p>
    <a href="/delete/<%= post.id %>" data-method="get" class="btn btn-danger" style="margin:0 auto" >Delete</a>
    <a href="/update/<%= post.id %>"class="btn btn-warning" style="margin:0 auto" >Update</a>
  </div>
</div>
<% end%>

